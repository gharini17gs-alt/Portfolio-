// script.js — small helpers (vCard download)

const vcardButton = document.getElementById('downloadVcard');

vcardButton.addEventListener('click', () => {
  const vcard = `BEGIN:VCARD\nVERSION:3.0\nFN:G. Harini\nTEL;TYPE=CELL:+919176242475\nEMAIL:gharini17gs@gmail.com\nADR:;;Kundrathur;Chennai;;600069;India\nEND:VCARD`;
  const blob = new Blob([vcard], { type: 'text/vcard' });
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = 'G-Harini.vcf';
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
});

// Optional: load a placeholder if profile image not found
window.addEventListener('error', (e) => {
  if (e.target && e.target.tagName === 'IMG' && e.target.classList.contains('avatar')){
    e.target.src = 'data:image/svg+xml;utf8,\
<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"120\" height=\"120\">\
<rect width=\"100%\" height=\"100%\" fill=\"#e6eef9\"/>\
<text x=\"50%\" y=\"50%\" dominant-baseline=\"middle\" text-anchor=\"middle\" fill=\"#2b6cb0\" font-size=\"20\">No Image</text></svg>';
  }
}, true);
